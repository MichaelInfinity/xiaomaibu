<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <ImageView
        android:id="@+id/backgroundImage_community"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/good_night_img"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/community_upload_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/no_image"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/community_upload_image_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="点击更换社区头像"
        android:textAlignment="center"
        android:textColor="#DA9393"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_corner="15dp"
        app:stv_drawableAsBackground="true"
        app:stv_pressBgColor="#12651E"
        app:stv_pressTextColor="@color/white"
        app:stv_state_drawable="#B8E49C"
        app:stv_stroke_color="@color/white"
        app:stv_stroke_width="5dp" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/community_upload_background_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="点击更换社区背景"
        android:textAlignment="center"
        android:textColor="#DA9393"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_corner="15dp"
        app:stv_drawableAsBackground="true"
        app:stv_pressBgColor="#12651E"
        app:stv_pressTextColor="@color/white"
        app:stv_state_drawable="#B8E49C"
        app:stv_stroke_color="@color/white"
        app:stv_stroke_width="5dp" />

    <EditText
        android:id="@+id/community_upload_name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="请输入社区名称"
        android:textAlignment="center"
        android:textColor="#DA9393"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/et_sharp"
        app:textBoxColor="@android:color/white"
        app:floatingLabelColor="@android:color/white"
        app:imageColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/community_upload_intro"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/et_sharp2"
        android:text="输入社区简介(不超过300字)"
        android:textColor="#DA9393"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/community_upload_button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="社区申请"
        android:textAlignment="center"
        android:textColor="#302828"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:stv_corner="15dp"
        app:stv_drawableAsBackground="true"
        app:stv_pressBgColor="#D63838"
        app:stv_state_drawable="#D63D7F"
        app:stv_stroke_color="@color/white"
        app:stv_stroke_width="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>