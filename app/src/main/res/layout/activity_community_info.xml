<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".communityInfoActivity">

    <ImageView
        android:id="@+id/backgroundImage_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/good_night_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/community_upload_intro2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/et_sharp3"
        android:gravity="top"
        android:onClick="career_app_click"
        android:text="输入社区简介(不超过300字)"
        android:textColor="#DA9393"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_corner="15dp"
        app:stv_drawableAsBackground="true"
        app:stv_pressBgColor="#12651E"
        app:stv_state_drawable="#F8F8F8"
        app:stv_stroke_color="#E88181"
        app:stv_stroke_width="5dp"/>

    <com.coorchice.library.SuperTextView
        android:id="@+id/community_info_name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="社区名称"
        android:textAlignment="center"
        android:textColor="#DA9393"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_corner="15dp"
        app:stv_drawableAsBackground="true"
        app:stv_pressBgColor="#12651E"
        app:stv_state_drawable="#F8F8F8"
        app:stv_stroke_color="#E88181"
        app:stv_stroke_width="5dp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/community_info_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/no_image"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/et_sharp3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/career_input"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/et_sharp3"
        android:gravity="center"
        android:text="请输入你想要申请的职业"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/apply_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="申请"
        android:textSize="20dp"
        android:onClick="apply_but_click"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:stv_corner="15dp"
        app:stv_drawableAsBackground="true"
        app:stv_pressBgColor="#12651E"
        app:stv_state_drawable="#70C2CD"
        app:stv_stroke_color="#F1EEEE"
        app:stv_stroke_width="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>